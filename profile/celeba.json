{
  "profile": "celeba_64x64_8bit",
  "general": {
    "verbose": false,
    "result_dir": "/Data/glow",
    "warm_start": false,
    "pre_trained": "",
    "resume_run_id": 1,
    "resume_step": "latest"
  },
  "dataset": {
    "problem": "celeba",
    "root": "/Data/CelebA",
    "num_classes": 1,
    "num_workers": 8,
    "argument": "standard"
  },
  "optim": {
    "num_epochs": 1000000,
    "num_train": 50000,
    "num_test": -1,
    "num_sample": 4,
    "interval_scalar": 50,
    "interval_snapshot": 5000,
    "interval_valid": 50,
    "interval_sample": 50,
    "num_batch_train": 32,
    "num_batch_test": 50,
    "num_batch_init": 256,
    "optimizer": "adamax",
    "optimizer_args": {
      "lr": 1e-3,
      "betas": [
        0.9,
        0.9999
      ],
      "eps": 1e-8,
      "weight_decay": 0
    },
    "lr_scheduler": "noam",
    "lr_scheduler_args": {
      "warmup_steps": 4000,
      "min_lr": 1e-4
    },
    "gradient_checkpointing": true
  },
  "model": {
    "image_shape": [
      64,
      64,
      3
    ],
    "anchor_size": 32,
    "hidden_channels": 512,
    "actnorm_scale": 1.0,
    "K": 32,
    "L": 3,
    "weight_y": 0.0,
    "n_bits_x": 8
  },
  "ablation": {
    "learn_top": false,
    "y_condition": false,
    "y_criterion": "multi_classes",
    "lu_decomposition": false,
    "seed": 0,
    "flow_permutation": "invconv",
    "flow_coupling": "affine",
    "max_grad_clip": 5,
    "max_grad_norm": 100
  },
  "device": {
    "graph": [
      "cuda:0",
      "cuda:1"
    ],
    "data": [
      "cuda:0"
    ]
  }
}

